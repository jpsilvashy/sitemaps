<h3>Site map for: <%= @site_map.hostname %></h3>

<% @site_map.pages.each do |page| %>
<div class='page'>
  <h4 class='page-uri'><strong>Page: </strong><%= URI.parse(page.uri).path %></h4>

  <ul class="links">
    <% page.links.each do |link| %>
    <li><%= URI.parse(link.uri).path %></li>
    <% end %>
  </ul>

  <% if page.assets.present? %>
  <h5>Assets:</h5>
  <ul class="assets">
    <% page.assets.each do |asset| %>
    <li><%= URI.parse(asset.uri).path%></li>
    <% end %>
  </ul>
  <% end %>

</div>
<% end %>
